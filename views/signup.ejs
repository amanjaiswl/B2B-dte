<div class="auth-container">
  <div class="auth-card">
    <h2>Business Registration</h2>
    <form action="/signup" method="POST" enctype="multipart/form-data">
      <!-- Business Details -->
      <h3>Business Details</h3>
      <div class="form-group">
        <label for="businessName">Business Name*</label>
        <input type="text" id="businessName" name="businessName" required>
      </div>
      <div class="form-group">
        <label for="gstNumber">GST Number*</label>
        <input type="text" id="gstNumber" name="gstNumber" required>
      </div>
      <div class="form-group">
        <label for="legalName">Legal Business Name*</label>
        <input type="text" id="legalName" name="legalName" required>
      </div>
      <div class="form-group">
        <label for="promoterName">Promoter Name*</label>
        <input type="text" id="promoterName" name="promoterName" required>
      </div>
      <div class="form-group">
        <label for="establishmentDate">Establishment Date*</label>
        <input type="date" id="establishmentDate" name="establishmentDate" required>
      </div>
      <div class="form-group">
        <label for="businessDescription">Business Description*</label>
        <textarea id="businessDescription" name="businessDescription" rows="4" required></textarea>
      </div>

      <!-- Official Address & Contact -->
      <h3>Official Address & Contact</h3>
      <div class="form-group">
        <label for="address">Address*</label>
        <input type="text" id="address" name="address" required>
      </div>
      <div class="form-group">
        <label for="phoneNumber">Business Phone Number*</label>
        <input type="tel" id="phoneNumber" name="phoneNumber" required>
      </div>

      <!-- Documents -->
      <h3>Documents</h3>
      <div class="form-group">
        <label for="ownershipCertificate">Business Ownership Certificate*</label>
        <input type="file" id="ownershipCertificate" name="ownershipCertificate" accept=".pdf,.jpg,.jpeg,.png" required>
      </div>
      <div class="form-group">
        <label for="ownerAadhar">Owner's Aadhar Card (File)*</label>
        <input type="file" id="ownerAadhar" name="ownerAadhar" accept=".pdf,.jpg,.jpeg,.png" required>
      </div>
      <div class="form-group">
        <label for="ownerPhone">Owner's Phone Number*</label>
        <input type="tel" id="ownerPhone" name="ownerPhone" required>
      </div>

      <button type="submit" class="btn primary-btn btn-full">Register Business</button>
    </form>
    <p class="form-footer">Already have an account? <a href="/login">Login here</a></p>
  </div>
</div>

